#include<stdio.h>
int main() {
    int a[50][50], num = 0, le, re, te, be;
    int n, i, j;
    scanf("%d", &n);
    re = be = n; // 오른쪽, 아래쪽 첨자 초기화
    le = te = 1; // 왼쪽, 위쪽 첨자 초기화

    while (num < n * n) {
        // 오른쪽으로 이동하며 숫자 배치
        for (j = le; j <= re && num < n * n; j++) {
            a[te][j] = ++num;
        }
        te++;

        // 아래쪽으로 이동하며 숫자 배치
        for (i = te; i <= be && num < n * n; i++) {
            a[i][re] = ++num;
        }
        re--;

        // 왼쪽으로 이동하며 숫자 배치
        for (j = re; j >= le && num < n * n; j--) {
            a[be][j] = ++num;
        }
        be--;

        // 위쪽으로 이동하며 숫자 배치
        for (i = be; i >= te && num < n * n; i--) {
            a[i][le] = ++num;
        }
        le++;
    }

    // 배열 출력
    for (i = 1; i <= n; i++, puts("")) {
        for (j = 1; j <= n; j++) {
            printf("%d ", a[i][j]);
        }
    }

    return 0;
}
