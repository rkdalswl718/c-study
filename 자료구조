#include <stdio.h>
#include <string.h>

int main() {
    int n;
    scanf("%d", &n);

    while (n--) {
        char quiz[81];
        scanf("%s", quiz);

        int score = 0; // 현재 문제까지의 점수
        int totalScore = 0; // 전체 점수

        for (int i = 0; i < strlen(quiz); i++) {
            if (quiz[i] == 'O') {
                score++;
                totalScore += score;
            } else {
                score = 0;
            }
        }

        printf("%d\n", totalScore);
    }

    return 0;
}
