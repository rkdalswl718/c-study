#include <stdio.h>

void printnumber(int a, int b, int c) {
    int sum = a + b + c;
    double average = (double)sum / 3;  // sum을 double로 변환하여 평균 계산

    printf("평균 : %.2f", average);
}

int main() {
    int a, b, c;
    printf("세 과목의 점수를 입력하세요. ");
    scanf("%d %d %d", &a, &b, &c);
    
    printnumber(a, b, c);

    return 0;
}
